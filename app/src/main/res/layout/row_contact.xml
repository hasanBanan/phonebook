<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/icon_contact"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="10dp"
        android:tint="#00000000"/>

    <TextView
        android:id="@+id/icon_symbol"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="9dp"
        android:gravity="center"
        android:textColor="#ffffff"
        android:textSize="40dp"/>

    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/icon_contact"
        android:layout_toLeftOf="@id/elect_btn"
        android:textSize="22dp"
        android:textColor="#292929"/>

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/display_name"
        android:layout_toRightOf="@id/icon_contact"
        android:layout_marginTop="7dp"
        android:textColor="#747272"/>

    <ImageView
        android:id="@+id/elect_btn"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_star24dp"/>

</RelativeLayout>